<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:background="@drawable/up_bg">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/dialog_title"
        android:textColor="#000000"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:text="发现新版本">
    </TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="35dp">

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/draw_progress_layer"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </View>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/icon_test"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/update_logo">

        </ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_test"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/update_updown"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/update_progress"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/darkgray"
            android:layout_below="@+id/update_updown">

        </TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/darkgray"
            android:id="@+id/dialog_message">

        </TextView>

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="立即更新"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:id="@+id/dialog_sec_btn">

    </Button>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="以后在说"
        android:textColor="#6abbc5"
        android:layout_marginTop="25dp"
        android:id="@+id/dialog_first_btn">

    </TextView>

</LinearLayout>
